@page
@model FloosCash.Pages.Shifts.CreateModel
@{
    ViewData["Title"] = "بداية اليوم: فتح وردية جديدة";
}

<div class="row row-cards justify-content-center">
    <div class="col-12 col-md-8">
        <form method="post" class="card">
            <div class="card-header bg-primary text-white">
                <h3 class="card-title text-white d-flex align-items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon me-2" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0" /><path d="M12 12l3 2" /><path d="M12 7v5" /></svg>
                    تسجيل عهدة بداية اليوم
                </h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12 mb-3">
                        <label class="form-label required">اسم الموظف / الكاشير</label>
                        <input asp-for="Shift.EmployeeName" class="form-control form-control-lg" required />
                        <span asp-validation-for="Shift.EmployeeName" class="text-danger"></span>
                    </div>
                    <div class="col-md-12 mb-3">
                        <label class="form-label required">رصيد الدرج الافتتاحي (النقدية المسلمة)</label>
                        <div class="input-group input-group-flat">
                            <span class="input-group-text bg-light fw-bold text-success">ج.م</span>
                            <input asp-for="Shift.OpeningCash" type="number" step="0.01" class="form-control form-control-lg text-end fs-2" placeholder="0.00" required />
                        </div>
                        <span class="form-hint mt-2">المبلغ النقدي المسلم للموظف في بداية الوردية (الفكة لتسيير العمل).</span>
                        <span asp-validation-for="Shift.OpeningCash" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="card-footer text-end bg-light">
                <a href="/" class="btn btn-link link-secondary me-auto">إلغاء</a>
                <button type="submit" class="btn btn-success btn-lg">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M5 12l5 5l10 -10" /></svg>
                    بدء الوردية الآن
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}