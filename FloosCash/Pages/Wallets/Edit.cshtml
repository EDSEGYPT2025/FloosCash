@page
@model FloosCash.Pages.Wallets.EditModel
@{
    ViewData["Title"] = "تعديل بيانات المحفظة";
}

<div class="row row-cards justify-content-center">
    <div class="col-12 col-xl-10">
        <form method="post" class="card shadow-sm">
            <input type="hidden" asp-for="Wallet.Id" />

            <div class="card-header bg-dark text-white">
                <h3 class="card-title text-white">تعديل إعدادات المحفظة: @Model.Wallet.Name</h3>
            </div>
            <div class="card-body">

                <h2 class="text-primary mb-3">البيانات الأساسية</h2>
                <div class="row g-3 mb-4">
                    <div class="col-md-3">
                        <label class="form-label required">اسم المحفظة / الرقم</label>
                        <input asp-for="Wallet.Name" class="form-control" required />
                        <span asp-validation-for="Wallet.Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label required">النوع</label>
                        <select asp-for="Wallet.Type" class="form-select" required>
                            <option value="VodafoneCash">فودافون كاش</option>
                            <option value="EtisalatCash">اتصالات كاش</option>
                            <option value="InstaPay">إنستا باي</option>
                            <option value="CashDrawer">درج نقدية (كاش)</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">الرصيد الحالي (ج.م)</label>
                        <input asp-for="Wallet.CurrentBalance" type="number" step="0.01" class="form-control fw-bold text-success bg-light" readonly />
                        <span class="form-hint text-danger">لا يُعدل من هنا (يُعدل عبر العمليات)</span>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">حالة المحفظة</label>
                        <label class="form-check form-switch mt-2">
                            <input class="form-check-input" type="checkbox" asp-for="Wallet.IsActive">
                            <span class="form-check-label fw-bold">محفظة نشطة (تعمل)</span>
                        </label>
                    </div>
                </div>

                <hr class="my-4" />

                <h2 class="text-warning mb-3">إعدادات العمولات (%)</h2>
                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <label class="form-label">عمولة الإيداع الافتراضية</label>
                        <div class="input-group">
                            <input asp-for="Wallet.DepositCommissionRate" type="number" step="0.01" class="form-control" />
                            <span class="input-group-text">%</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">عمولة السحب الافتراضية</label>
                        <div class="input-group">
                            <input asp-for="Wallet.WithdrawalCommissionRate" type="number" step="0.01" class="form-control" />
                            <span class="input-group-text">%</span>
                        </div>
                    </div>
                </div>

                <hr class="my-4" />

                <h2 class="text-danger mb-3">الحدود الرقابية للأمان (ج.م)</h2>
                <div class="row g-3 bg-red-lt p-3 rounded-3">
                    <div class="col-md-6">
                        <label class="form-label text-danger fw-bold">الحد الأقصى للإيداع اليومي</label>
                        <input asp-for="Wallet.DailyDepositLimit" type="number" class="form-control border-danger" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-danger fw-bold">الحد الأقصى للسحب اليومي</label>
                        <input asp-for="Wallet.DailyWithdrawalLimit" type="number" class="form-control border-danger" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-danger fw-bold">الحد الأقصى للإيداع الشهري</label>
                        <input asp-for="Wallet.MonthlyDepositLimit" type="number" class="form-control border-danger" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-danger fw-bold">الحد الأقصى للسحب الشهري</label>
                        <input asp-for="Wallet.MonthlyWithdrawalLimit" type="number" class="form-control border-danger" />
                    </div>
                </div>

            </div>
            <div class="card-footer text-end bg-light">
                <a asp-page="./Index" class="btn btn-link link-secondary me-auto">إلغاء</a>
                <button type="submit" class="btn btn-dark btn-lg">حفظ التعديلات</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}