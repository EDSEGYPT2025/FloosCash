@page
@model FloosCash.Pages.Wallets.CreateModel
@{
    ViewData["Title"] = "إضافة محفظة جديدة";
}

<div class="row row-cards justify-content-center">
    <div class="col-12 col-xl-10">
        <form method="post" class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h3 class="card-title text-white">إعدادات وضوابط المحفظة</h3>
            </div>
            <div class="card-body">

                <h2 class="text-primary mb-3"><svg xmlns="http://www.w3.org/2000/svg" class="icon me-2" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M17 8v-3a1 1 0 0 0 -1 -1h-10a2 2 0 0 0 0 4h12a1 1 0 0 1 1 1v3m0 4v3a1 1 0 0 1 -1 1h-12a2 2 0 0 1 -2 -2v-12" /><path d="M20 12v4h-4a2 2 0 0 1 0 -4h4" /></svg>البيانات الأساسية</h2>
                <div class="row g-3 mb-4">
                    <div class="col-md-4">
                        <label class="form-label required">اسم المحفظة / الرقم</label>
                        <input asp-for="Wallet.Name" class="form-control" placeholder="مثال: فودافون 010..." required />
                        <span asp-validation-for="Wallet.Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label required">النوع</label>
                        <select asp-for="Wallet.Type" class="form-select" required>
                            <option value="">-- اختر النوع --</option>
                            <option value="VodafoneCash">فودافون كاش</option>
                            <option value="EtisalatCash">اتصالات كاش</option>
                            <option value="InstaPay">إنستا باي</option>
                            <option value="CashDrawer">درج نقدية (كاش)</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label required">الرصيد الافتتاحي (ج.م)</label>
                        <input asp-for="Wallet.CurrentBalance" type="number" step="0.01" class="form-control fw-bold text-success" required />
                    </div>
                </div>

                <hr class="my-4" />

                <h2 class="text-warning mb-3"><svg xmlns="http://www.w3.org/2000/svg" class="icon me-2" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0" /><path d="M14.8 9a2 2 0 0 0 -1.8 -1h-2a2 2 0 1 0 0 4h2a2 2 0 1 1 0 4h-2a2 2 0 0 1 -1.8 -1" /><path d="M12 7v2" /><path d="M12 15v2" /></svg>إعدادات العمولات (%)</h2>
                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <label class="form-label">عمولة الإيداع الافتراضية</label>
                        <div class="input-group">
                            <input asp-for="Wallet.DepositCommissionRate" type="number" step="0.01" class="form-control" placeholder="0.00" />
                            <span class="input-group-text">%</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">عمولة السحب الافتراضية</label>
                        <div class="input-group">
                            <input asp-for="Wallet.WithdrawalCommissionRate" type="number" step="0.01" class="form-control" placeholder="1.00" />
                            <span class="input-group-text">%</span>
                        </div>
                    </div>
                </div>

                <hr class="my-4" />

                <h2 class="text-danger mb-3"><svg xmlns="http://www.w3.org/2000/svg" class="icon me-2" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M12 3a12 12 0 0 0 8.5 3a12 12 0 0 1 -8.5 15a12 12 0 0 1 -8.5 -15a12 12 0 0 0 8.5 -3" /><path d="M12 11m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0" /><path d="M12 12l0 2.5" /></svg>الحدود الرقابية للأمان (ج.م)</h2>
                <div class="row g-3 bg-red-lt p-3 rounded-3">
                    <div class="col-md-6">
                        <label class="form-label text-danger fw-bold">الحد الأقصى للإيداع اليومي</label>
                        <input asp-for="Wallet.DailyDepositLimit" type="number" class="form-control border-danger" value="60000" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-danger fw-bold">الحد الأقصى للسحب اليومي</label>
                        <input asp-for="Wallet.DailyWithdrawalLimit" type="number" class="form-control border-danger" value="60000" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-danger fw-bold">الحد الأقصى للإيداع الشهري</label>
                        <input asp-for="Wallet.MonthlyDepositLimit" type="number" class="form-control border-danger" value="200000" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-danger fw-bold">الحد الأقصى للسحب الشهري</label>
                        <input asp-for="Wallet.MonthlyWithdrawalLimit" type="number" class="form-control border-danger" value="200000" />
                    </div>
                </div>

            </div>
            <div class="card-footer text-end bg-light">
                <a asp-page="./Index" class="btn btn-link link-secondary me-auto">إلغاء</a>
                <button type="submit" class="btn btn-primary btn-lg">حفظ المحفظة بضوابطها</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}