@page
@model FloosCash.Pages.Users.CreateModel
@{
    ViewData["Title"] = "إضافة مستخدم جديد";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <form method="post" class="card shadow-sm">
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label required">الاسم بالكامل</label>
                    <input asp-for="NewUser.FullName" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label class="form-label required">اسم الدخول (Username)</label>
                    <input asp-for="NewUser.Username" class="form-control" required />
                    <span asp-validation-for="NewUser.Username" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label required">كلمة المرور</label>
                    <input asp-for="NewUser.Password" type="password" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label class="form-label required">نوع الصلاحية</label>
                    <select asp-for="NewUser.Role" class="form-select">
                        <option value="Cashier">كاشير (موظف)</option>
                        <option value="Admin">مدير نظام</option>
                    </select>
                </div>
            </div>
            <div class="card-footer text-end">
                <a href="/Users/Index" class="btn btn-link">إلغاء</a>
                <button type="submit" class="btn btn-primary">حفظ المستخدم</button>
            </div>
        </form>
    </div>
</div>